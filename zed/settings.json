// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
	"assistant": {
		"default_model": {
			"provider": "google",
			"model": "gemini-2.0-flash"
		},
		"version": "2"
	},
	"features": {
		"edit_prediction_provider": "none"
	},
	"ui_font_size": 16,
	"buffer_font_size": 16,
	"buffer_font_family": "Cascadia Code NF",
	"ui_font_family": "Cascadia Mono NF",
	"format_on_save": "on",
	"show_whitespaces": "boundary",
	"hard_tabs": true,
	"theme": {
		"mode": "system",
		"light": "Gruvbox Light",
		"dark": "Gruvbox Dark"
	},
	"languages": {
		"PHP": {
			"enable_language_server": true,
			"formatter": {
				"external": {
					"command": "/home/niklas/bin/phpcbf-fix"
				}
			},
			"hard_tabs": true
		},
		"CSS": {
			"tab_size": 2,
			"hard_tabs": false,
			"formatter": "prettier"
		},
		"HTML": {
			"tab_size": 4,
			"hard_tabs": true,
			"formatter": "prettier"
		},
		"SCSS": {
			"hard_tabs": false
		},
		"Twig": {
			"enable_language_server": true,
			"formatter": "language_server",
			"tab_size": 2,
			"hard_tabs": false
		},
		"JavaScript": {
			"hard_tabs": false
		},
		"TypeScript": {
			"hard_tabs": false
		},
		"Vue.js": {
			"hard_tabs": false
		}
	},
	"lsp": {
		"intelephense": {
			"settings": {
				"files": {
					// Increase the max file size. Large projects easily cause composer autoload
					// files to increase over 1 MB (default)
					"maxSize": 3000000
				},
				"environment": {
					"includePaths": ["./.jcore/wordpress", "./vendor"]
				},
				"stubs": [
					"apache",
					"bcmath",
					"bz2",
					"calendar",
					"com_dotnet",
					"Core",
					"ctype",
					"curl",
					"date",
					"dba",
					"dom",
					"enchant",
					"exif",
					"FFI",
					"fileinfo",
					"filter",
					"fpm",
					"ftp",
					"gd",
					"gettext",
					"gmp",
					"hash",
					"iconv",
					"imap",
					"intl",
					"json",
					"ldap",
					"libxml",
					"mbstring",
					"meta",
					"mysqli",
					"oci8",
					"odbc",
					"openssl",
					"pcntl",
					"pcre",
					"PDO",
					"pdo_ibm",
					"pdo_mysql",
					"pdo_pgsql",
					"pdo_sqlite",
					"pgsql",
					"Phar",
					"posix",
					"pspell",
					"random",
					"readline",
					"Reflection",
