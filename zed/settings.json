// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
	"assistant": {
		"default_model": {
			"provider": "google",
			"model": "gemini-2.0-flash"
		},
		"version": "2"
	},
	"features": {
		"inline_completion_provider": "none"
	},
	"ui_font_size": 16,
	"buffer_font_size": 16,
	"buffer_font_family": "Cascadia Code NF",
	"ui_font_family": "Cascadia Mono NF",
	"format_on_save": "on",
	"show_whitespaces": "boundary",
	"hard_tabs": true,
	"theme": {
		"mode": "system",
		"light": "Gruvbox Light",
		"dark": "Gruvbox Dark"
	},
	"languages": {
		"PHP": {
			"enable_language_server": true,
			"formatter": "language_server",
			"hard_tabs": true
		},
		"CSS": {
			"tab_size": 2,
			"hard_tabs": false,
			"formatter": "prettier"
		},
		"HTML": {
			"tab_size": 4,
			"hard_tabs": true,
			"formatter": "prettier"
		},
		"SCSS": {
			"hard_tabs": false
		},
		"Twig": {
			"enable_language_server": false,
			"formatter": "prettier",
			"tab_size": 2,
			"hard_tabs": false
		},
		"JavaScript": {
			"hard_tabs": false
		},
		"TypeScript": {
			"hard_tabs": false
		},
		"Vue.js": {
			"hard_tabs": false
		}
	}
}
